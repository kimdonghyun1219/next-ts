{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-var": "error",
    "prefer-const": ["error", {
      "destructuring": "any",
      "ignoreReadBeforeAssign": false
    }],
    "spaced-comment": ["error", "never"],
    "array-bracket-spacing": ["error", "never"],
    "brace-style": ["error", "allman"],
    "indent": ["warn", 2, {
      "SwitchCase": 1,
      "MemberExpression": 1,
      "StaticBlock": {
        "body": 1
      },
      "ArrayExpression": 1,
      "ObjectExpression": 1
    }],
    "semi": ["error", "always"],
    "eqeqeq": ["error", "always"],
    "quotes": ["error", "single"],
    "no-eval": "error",
    "no-await-in-loop": "error",
    "no-cond-assign": "error",
    "no-console": "warn",
    "no-dupe-args": "error",
    "no-duplicate-case": "error",
    "no-empty": "warn",
    "no-ex-assign": "error",
    "no-extra-semi": "warn",
    "no-trailing spaces": "error",
    "padded-blocks": ["error", "never"],
    "no-multiple-empty-lines": ["warn", {
      "max": 2,
      "maxBOF": 0,
      "maxEOF": 1
    }],
    "no-multi-str": "error"
  }
}
